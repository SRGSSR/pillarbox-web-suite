{
  "name": "@srgssr/chapter-bar",
  "version": "0.0.1",
  "license": "MIT",
  "author": "SRG SSR",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SRGSSR/pillarbox-web-suite.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/SRGSSR/pillarbox-web-suite/tree/main/packages/chapter-bar#readme",
  "type": "module",
  "main": "dist/chapter-bar.cjs",
  "browser": "dist/chapter-bar.umd.min.js",
  "module": "dist/chapter-bar.js",
  "style": "./dist/chapter-bar.min.css",
  "exports": {
    ".": {
      "import": "./dist/chapter-bar.js",
      "require": "./dist/chapter-bar.cjs"
    },
    "./*": "./*"
  },
  "files": [
    "dist/*",
    "scss/*"
  ],
  "keywords": [
    "video.js",
    "player",
    "pillarbox"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:umd && npm run build:css",
    "build:css": "sass ./scss/chapter-bar.scss:dist/chapter-bar.min.css --style compressed --source-map --load-path node_modules",
    "build:lib": "vite build --config vite.config.lib.js",
    "build:umd": "vite build --config vite.config.umd.js",
    "github:page": "vite build",
    "release:ci": "semantic-release",
    "start": " vite --port 4200 --open",
    "test": "vitest run --silent --coverage --coverage.reporter text"
  },
  "peerDependencies": {
    "@srgssr/pillarbox-web": "^1.12.1"
  }
}
