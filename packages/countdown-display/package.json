{
  "name": "@srgssr/countdown-display",
  "version": "0.0.1",
  "license": "MIT",
  "author": "SRG SSR",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SRGSSR/pillarbox-web-suite.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/SRGSSR/pillarbox-web-suite/tree/main/packages/countdown-display#readme",
  "type": "module",
  "main": "dist/countdown-display.cjs",
  "browser": "dist/countdown-display.umd.min.js",
  "module": "dist/countdown-display.js",
  "style": "./dist/countdown-display.min.css",
  "exports": {
    ".": {
      "import": "./dist/countdown-display.js",
      "require": "./dist/countdown-display.cjs"
    },
    "./*": "./*"
  },
  "files": [
    "dist/*",
    "scss/*"
  ],
  "keywords": [
    "video.js",
    "player"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm-run-all clean build:*",
    "build:css": "sass ./scss/countdown-display.scss:dist/countdown-display.min.css --style compressed --source-map --load-path node_modules",
    "build:lib": "vite build --config vite.config.lib.js",
    "build:umd": "vite build --config vite.config.umd.js",
    "github:page": "vite build",
    "release:ci": "semantic-release",
    "start": " vite --port 4200 --open",
    "test": "vitest run --silent --coverage --coverage.reporter text"
  },
  "peerDependencies": {
    "video.js": "^8.0.0"
  },
  "devDependencies": {
    "@srgssr/pillarbox-web": "^1.29.0"
  }
}
