{
  "name": "@srgssr/google-cast-sender",
  "version": "1.2.0",
  "license": "MIT",
  "author": "SRG SSR",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SRGSSR/pillarbox-web-suite.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/SRGSSR/pillarbox-web-suite/tree/main/packages/google-cast-sender#readme",
  "type": "module",
  "main": "dist/google-cast-sender.cjs",
  "browser": "dist/google-cast-sender.umd.min.js",
  "module": "dist/google-cast-sender.js",
  "style": "./dist/google-cast-sender.min.css",
  "exports": {
    ".": {
      "import": "./dist/google-cast-sender.js",
      "require": "./dist/google-cast-sender.cjs"
    },
    "./button": {
      "import": "./dist/ui/google-cast-button.js",
      "require": "./dist/ui/google-cast-button.cjs"
    },
    "./*": "./*"
  },
  "files": [
    "dist/*",
    "scss/*"
  ],
  "keywords": [
    "video.js",
    "player",
    "videojs-plugin",
    "Chrome",
    "Chromecast",
    "Google cast",
    "Cast",
    "TV"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm-run-all clean build:*",
    "build:css": "sass ./scss/google-cast-sender.scss:dist/google-cast-sender.min.css --style compressed --source-map --load-path node_modules",
    "build:lib:sender": "vite build --config vite.config.lib.js",
    "build:lib:button": "BUILD_TARGET=button vite build --config vite.config.lib.js",
    "build:lib": "npm run build:lib:sender && npm run build:lib:button",
    "build:umd:sender": "vite build --config vite.config.umd.js",
    "build:umd:button": "BUILD_TARGET=button vite build --config vite.config.umd.js",
    "build:umd": "npm run build:umd:sender && npm run build:umd:button",
    "github:page": "vite build",
    "release:ci": "semantic-release",
    "start": " vite --port 4200 --open",
    "test": "vitest run --silent --coverage --coverage.reporter text"
  },
  "dependencies": {
    "@srgssr/svg-button": "^1.1.0"
  },
  "peerDependencies": {
    "video.js": "^8.0.0"
  },
  "devDependencies": {
    "@srgssr/pillarbox-web": "^1.23.1",
    "@types/chromecast-caf-sender": "^1.0.11"
  }
}
