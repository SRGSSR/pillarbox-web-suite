{
  "name": "@srgssr/pillarbox-web-suite",
  "description": "A suite of plugins and themes for pillarbox-web",
  "version": "0.0.1",
  "license": "MIT",
  "author": "SRG SSR",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SRGSSR/pillarbox-web-suite.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://plugins.pillarbox.ch",
  "type": "module",
  "workspaces": [
    "packages/web-suite-utils",
    "packages/svg-button",
    "packages/card",
    "packages/*"
  ],
  "scripts": {
    "create": "plop --plopfile scripts/create.js",
    "eslint": "eslint {packages/**/{src,test}/**/*.{js,jsx},scripts/*.{js,jsx}}",
    "build": "npm run build -ws",
    "github:page": "npm run github:page --ws --if-present && vite build && node scripts/prepare-deployment.js",
    "start": " vite --host --port 4200 --open",
    "outdated": "npm outdated",
    "prepare": "husky",
    "stylelint": "stylelint **/*.{css,scss} --allow-empty-input",
    "stylelint:fix": "stylelint **/*.{css,scss} --fix",
    "test": "vitest run --coverage --reporter=verbose --silent",
    "test:create": "vitest run --config scripts/vitest.scripts.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/eslint-plugin": "^1.4.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "node-plop": "^0.32.3",
    "npm-run-all": "^4.1.5",
    "plop": "^4.0.4",
    "rimraf": "^6.1.0",
    "rollup-plugin-copy": "^3.5.0",
    "sass": "^1.94.0",
    "semantic-release": "^25.0.2",
    "semantic-release-monorepo": "^8.0.2",
    "stylelint": "^16.25.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-order": "^7.0.0",
    "video.js": "8.21.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}
