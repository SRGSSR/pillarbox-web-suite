{
  "name": "@srgssr/pillarbox-web-suite",
  "description": "A suite of plugins and themes for pillarbox-web",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SRGSSR/pillarbox-web-suite.git"
  },
  "workspaces": [
    "plugins/*",
    "themes/*"
  ],
  "scripts": {
    "create:plugin": "plop --plopfile scripts/create-plugin.js",
    "eslint": "eslint {plugins/**/{src,test}/**/*.{js,jsx},scripts/*.{js,jsx}}",
    "outdated": "npm outdated",
    "prepare": "husky",
    "stylelint": "stylelint **/*.{css,scss} --allow-empty-input",
    "stylelint:fix": "stylelint **/*.{css,scss} --fix",
    "github:page": "npm run github:page --ws && node scripts/prepare-deployment.js",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.24.1",
    "@babel/preset-env": "^7.24.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@parcel/transformer-sass": "^2.12.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.6.1",
    "parcel": "^2.12.0",
    "plop": "^4.0.1",
    "rollup": "^4.9.6",
    "rollup-plugin-filesize": "^10.0.0",
    "sass": "^1.75.0",
    "stylelint": "^16.3.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4"
  }
}
